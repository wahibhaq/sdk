<!-- tablet -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="100dp"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:paddingTop="100dp"
    android:orientation="vertical"
    tools:context=".SocketIOLayerActivity" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:autoLink="web"
        android:text="Socket IO Layer Activity | http://vibewrite.com/ | Simulator"
        android:textStyle="bold" />
    <EditText 
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="dstAddress" 
        android:text="172.17.3.139"/>
    <EditText 
        android:id="@+id/port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="dstPort" 
        android:text="8000"/>
    <Button 
        android:id="@+id/connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connect"/>
    <Button 
        android:id="@+id/disconnect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Disconnect"/>
    <Button 
        android:id="@+id/subscribe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subscribe"/>
     <Button 
        android:id="@+id/unsubscribe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UnSubscribe"/>
    <Button 
        android:id="@+id/vibratepen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vibrate Pen"/>
    <Button 
        android:id="@+id/clearlog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear Log"/>
    
     <EditText 
        android:id="@+id/output"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Output from Events" 
        android:text=""
        android:enabled="false"
        android:singleLine="true"/>
     
    <TextView
        android:id="@+id/log"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="Log comes here ..."
        android:layout_marginTop="100dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:singleLine="false"
        android:inputType="textNoSuggestions|textMultiLine"
        android:gravity="top|left"
        android:scrollbars="vertical"/>
    
    

</LinearLayout>